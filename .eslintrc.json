{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "object-curly-spacing": ["error", "always", { "arraysInObjects": false }],
      "max-len": ["error", { "code": 120 }],
      "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": false
        }
    }]
    }
}
